@using iTunesSearch.Models;
@model IEnumerable<analytic>


<style>
    table,
    th,
    td{
        border:1px solid black;
    }

    th{
        text-align:center;
        padding:5px 10px;              
    }

    td{
        padding: 3px;
    }
</style>


<div>
    <h4>See what results interests people</h4> 
    <p>If you're interested in data</p>
    <hr/>

    <table style="width:100%">
        <tr>
            <th>Hits</th>
            <th>URL</th>
        </tr>
        @foreach (analytic a in Model)
        {
            <tr>
             <td style="width:10%; text-align:center" >@a.hitCount</td>
             <td style="width:90%"><a href="@a.hit.url">@a.hit.url.Replace("https://itunes.apple.com/us/","")</a></td>
            </tr>
        }
    </table>
    <hr/>

</div>
